#!/bin/bash

# Simulated BTC miner - does NOT actually mine BTC
# Intended for educational and threat detection testing purposes only

echo "[+] Starting fake BTC mining process..."
echo "[*] Connecting to pool: stratum+tcp://fakebtc.pool.com:3333"
sleep 2
echo "[*] Authenticating with wallet address: 1FAKEbtcADDRESS123456"
sleep 1

start_time=$(date +%s)
duration=10  # Run for 10 seconds

while true; do
    current_time=$(date +%s)
    elapsed=$(( current_time - start_time ))

    if [ "$elapsed" -ge "$duration" ]; then
        break
    fi

    echo "[*] Mining... $(date)"
    sha256sum <<< "$RANDOM" > /dev/null
    sleep 0.5
done

echo "[âœ”] Successfully mined 1 BTC ðŸŽ‰"
